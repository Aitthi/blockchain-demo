    <script>
        function initVote(obj){
            $('#subP').html('')
            
            obj.map((item, i)=>{
                var text = `

                    <tr id="${item.data.id}">
                        <td>
                            <div class="round-img">
                                <a href=""><img src="${item.data.image}" alt=""></a>
                            </div>
                        </td>
                        <td>${item.data.name}</td>
                        <td>
                            <span class="badge badge-success">Done</span>
                        </td>
                    </tr>
                `

                $('#subP').append(text)
         }  )
        }
        window.fbAsyncInit = function() {
              FB.init({
                appId      : '1821260964868901',
                cookie     : true,
                xfbml      : true,
                version    : '2.8'
              });
                
                
            };
          
            (function(d, s, id){
               var js, fjs = d.getElementsByTagName(s)[0];
               if (d.getElementById(id)) {return;}
               js = d.createElement(s); js.id = id;
               js.src = "https://connect.facebook.net/en_US/all.js";
               fjs.parentNode.insertBefore(js, fjs);
             }(document, 'script', 'facebook-jssdk'));

          </script>

    <script>
    function joinCampaign(){     

      FB.getLoginStatus(function(response) {               
                var post = (fb)=>{
                    console.log(fb)
                    axios.get('/checkUser/'+fb.id+'/<%=data.hash%>').then(res=>{
                        var status = res.data.status
                        console.log(res)
                        if(status){
                            axios.post('/addBlock', {data:{
                            hash: "<%=data.hash%>",
                            name: fb.name,
                            image: fb.picture.data.url,
                            id: fb.id,
                            join: true, 
                            status: false
                            }}).then(function(res){

                                axios.get('/supporters/<%=data.hash%>').then(res=>{
                                    initVote(res.data)
                                })

                            })
                        }else{
                        alert('Signed in already.')
                        }
                    })

                }

                FB.login(function(res){                        
                    FB.api('/me?fields=id,name,picture',(resp)=>{
                            post(resp)
                    })
                },{scope: 'public_profile,email'})
        });


    }
    var users = JSON.parse('<%-people%>')
    initVote(users)
    
    </script>




